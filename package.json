  "engines": {
    "node": "8.1.0",
    "npm": "5.1.0"
  },
  "private": true,
  "dependencies": {
    "axios": "^0.16.2",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "concurrently": "^3.5.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "dotenv-safe": "^4.0.4",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "faker": "^4.1.0",
    "flash": "^1.1.0",
    "helmet": "^3.8.0",
    "json-schema-faker": "^0.4.3",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "mongoose": "^5.7.5",
    "mongoose-deep-populate": "^3.0.0",
    "mongoose-find-or-create": "^1.3.1",
    "mongoose-relationship": "^0.1.5",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0",
